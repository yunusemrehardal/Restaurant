@model List<Restaurant_EntityLayer.Concrete.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Ürün Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Ürün Açıklaması</th>
        <th>Ürün Kategorisi</th>
        <th>Ürün Resmi</th>
        <th>Ücret</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.ImageUrl</td>
            <td>@item.Price</td>
            <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Product/AddProduct" class="btn btn-primary">Yeni Ürün Girişi</a>